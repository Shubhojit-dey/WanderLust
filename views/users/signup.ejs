<% layout("layouts/boilerplate") -%>
<body>
    <div class="row mt-3">
        <h1 class="col-6 offset-3 mb-3">Signup On WanderLust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="post" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="username" class="form-lable">Enter Vaild username</label>
                    <input name="username" id="username" type="text" class="form-control" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Please type a valid username.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-lable">Enter Vaild email_Id</label>
                    <input name="email" id="email" type="text" class="form-control" required>
                    <div class="valid-feedback">
                        Nice!
                    </div>
                    <div class="invalid-feedback">
                        Please type a valid email address.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-lable">Enter Vaild password</label>
                    <input name="password" id="password" type="password" class="form-control" required>
                    <div class="invalid-feedback">
                        password is mandetory.
                    </div>
                </div>
                <button id="btn" type="submit" class="btn btn-dark">Signup</button>
            </form>
        </div>
    </div>
    <br><br>
</body>